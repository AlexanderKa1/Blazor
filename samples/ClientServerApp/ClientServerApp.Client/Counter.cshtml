@using ClientServerApp.Shared
@model Hello

<h1>Counter</h1>

<p>This is a simple example of a component.</p>

<p>
    Current count: <strong>@Model.MyProperty</strong> &nbsp;
    <button @onclick(IncrementCount)>Increment</button>
</p>

<p>It's also possible to include child components, pass data to them, and receive callbacks from them:</p>

<counter-display current-count=@Model.MyProperty
                 on-reset=@((Action)OnResetCounter) />

@functions {

    void IncrementCount()
    {
        Model.MyProperty++;
    }

    void OnResetCounter()
    {
        Model.MyProperty = 0;

        Render();
    }

}
