{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Blazor.Host on ClientServerApp",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build Host",
      "program": "${workspaceRoot}/src/Blazor.Host/bin/Debug/netcoreapp2.0/dotnet-blazor.dll",
      "args": [
        "serve"
      ],
      "cwd": "${workspaceRoot}/samples/ClientServerApp/ClientServerApp.Client/",
      "stopAtEntry": false,
      "launchBrowser": {
        "enabled": true,
        "args": "${auto-detect-url}",
        "windows": {
          "command": "cmd.exe",
          "args": "/C start ${auto-detect-url}"
        },
        "osx": {
          "command": "open"
        },
        "linux": {
          "command": "xdg-open"
        }
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceRoot}/Views"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "Attach to Blazor Program",
      "type": "blazor",
      "request": "attach",
      "address": "ws://localhost:5000/__debugger",
      "program": "${workspaceRoot}/Program.cs"
    }
  ]
}
